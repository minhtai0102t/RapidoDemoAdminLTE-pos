<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>

    <target xsi:type="File" name="textFile" fileName="nlog-text-${shortdate}.log">
      <layout>${longdate}|${level:upperCase=true}|${logger}|${message}|${all-event-properties}</layout>
    </target>

    <target xsi:type="File" name="jsonFile" fileName="nlog-json-${shortdate}.log">
      <layout xsi:type="JsonLayout" includeAllProperties="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="logger" layout="${logger}" />
        <attribute name="message" layout="${message}" />
      </layout>
    </target>

    <target name="dbLog" xsi:type="Database" connectionStringName="DemoContext">
      <commandtext>
        INSERT INTO [dbo].[ActivityLog]
        ([UserId],[Context],[Action],[Message],[CreationDate])
        VALUES
        (@UserId,@Context,@Action,@Message,@CreationDate)
      </commandtext>
      <parameter name="@UserId" layout="${event-properties:UserId}" />
      <parameter name="@Context" layout="${logger:shortName=true}" />
      <parameter name="@Action" layout="${event-properties:Action}" />
      <parameter name="@Message" layout="${message}" />
      <parameter name="@CreationDate" layout="${date}" />
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="textFile" />
    <!--<logger name="*" minlevel="Debug" writeTo="jsonFile" />-->
    <logger name="*" level="Trace" writeTo="dbLog" />
  </rules>
</nlog>