@model DemoAdminLTE.Models.SampleTime

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">@Strings.ValueInfo</h3>
            </div>

            @using (Html.BeginForm("Delete", "Value", new { id = Model.Id }, FormMethod.Post, new { role = "form" }))
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Station.Name)
                        @Html.TextBoxFor(model => model.Station.Name, new { @class = "form-control", disabled = "" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TimeStringDisplay)
                        @Html.TextBoxFor(model => model.TimeStringDisplay, new { @class = "form-control", disabled = "" })
                    </div>

                    @foreach (var item in Model.SensorValues)
                    {
                        <div class="form-group">
                            <label>@item.Sensor.Name</label>
                            @Html.TextBoxFor(model => item.Value, new { @class = "form-control", disabled = "" })
                        </div>

                    }

                    <div class="box-footer">
                        <button type="submit" class="btn btn-danger"><span class="ion-ios-trash"></span> @Actions.Delete</button>
                        <a href="@Url.Action("Index", "Value", new { stationid = Model.StationId })" class="btn btn-link pull-right"><span class="ion-ios-close-outline"></span> @Actions.Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
