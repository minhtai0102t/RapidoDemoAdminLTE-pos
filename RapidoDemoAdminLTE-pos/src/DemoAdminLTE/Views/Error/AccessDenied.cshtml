@{
    ViewBag.Title = Errors.AccessDenied;

    if (User != null && User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    }
}

<div class="error-page">
    <h2 class="headline text-red">401</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> @Errors.AccessDeniedTitle</h3>

        <p>@Errors.AccessDeniedMessage</p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">@Errors.Home</a>
    </div>
</div>
